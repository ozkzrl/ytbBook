@model ytBookStore.Models.Domain.Genre
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6"></div>
        <h3>Update Genre</h3>
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="PublisherName">PublisherName *</label>
                <input type="text" class="form-control" asp-for="PublisherName"/>
                <span asp-validation-for="PublisherName" class="text-danger"></span>
            </div>
            @if(TempData["msg"]!=null)
            {
                <div class="form-group">
               @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-dark">Save</button>
                <a href="/Genre/GetAll" class="btn btn-primary">List</a>


            </div>
           
        </form>
    </div>
</div>

