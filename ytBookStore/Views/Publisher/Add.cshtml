@model ytBookStore.Models.Domain.Publisher
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6"></div>
        <h3>Add Publisher</h3>
        <form asp-action="add" method="post">
            <div class="form-group">
                <label asp-for="PublisherNAme">Name *</label>
                <input type="text" class="form-control" asp-for="PublisherNAme"/>
                <span asp-validation-for="PublisherNAme" class="text-danger"></span>
            </div>
            @if(TempData["msg"]!=null)
            {
                <div class="form-group">
               @TempData["msg"]
                </div>
            }
            <div class="form-group pt-3">
                <button type="submit" class="btn btn-dark">Save</button>
                <a href="/Publisher/GetAll" class="btn btn-primary">List</a>
            </div>
        </form>
    </div>
</div>

