@model IEnumerable<ytBookStore.Models.Domain.Author>
@{
    ViewData["Title"] = "Add";
}

<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Author/Add">Add More</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6"></div>
        <h3>Genres</h3>
       <table class="table table-stripped table-bordered table-dark">
           <thead>
               <tr>
                   <th>AuthorName</th>
                   <th>Action</th>
               </tr>
           </thead>
           <tbody>
            @foreach(var item in Model )
            {
           <tr>
               <td>@item.AuthorName</td>
               <td>
                   <a class="btn btn-success" href="/Author/Update?id=@item.Id">Edit</a>
                   <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Author/Delete?id=@item.Id">Delete</a>
                   </td>
           </tr>
            }
           <</tbody>
       </table>
    </div>
</div>

